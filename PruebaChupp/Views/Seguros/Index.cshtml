@{
    ViewData["Title"] = "Seguros";
}
<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="js/jquery.mask.min.js"></script>
<h2>Seguros</h2>
<p> Opciones de Seguros </p>
<table>
    <tr>
        <td>
            <a href="javascript:;" class="btn btn-primary" id="btnagregar" data-toggle="modal" data-target="#modalSeguros">Agregar</a>
        </td>
    </tr>
</table>
<hr />
<div>
    <input id="eliminar" type="hidden" value="0" />
    <table id="tableSeguros" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <td>...</td>
                <td>Código</td>
                <td>Nombre</td>
                <td>Tipo</td>
                <td>Base</td>
                <td>Fecha creación</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="modal fade" id="modalSeguros" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Seguros</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frm_">
                    <input type="hidden" id="id_seguro" name="id_seguro" />
                    <input type="hidden" id="fecha_creacion" name="fecha_creacion" />
                    <div class="form-group">
                        <input type="text" class="form-control" id="codigo_seguro" name="codigo_seguro" maxlength="10" placeholder="Codigo" readonly>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="tipo_seguro" name="tipo_seguro">
                            <option value="">--Tipos de seguro--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control text-right" id="valor" name="valor" placeholder="0.00">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="cheestado" name="cheestado">
                        <label class="form-check-label" for="cheestado">Activo</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnguardar">Guardar</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="js/functions_seguros.js"></script>