@{
    ViewData["Title"] = "Ventas";
}
<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="js/jquery.mask.min.js"></script>
<h2>Ventas</h2>
<p> Opciones de Ventas </p>
<table>
    <tr>
        <td>
            <a href="javascript:;" class="btn btn-primary" id="btnagregar" data-toggle="modal" data-target="#modalVentas">Agregar</a>
        </td>
    </tr>
</table>
<hr />
<div>
    <input id="eliminar" type="hidden" value="0" />
    <table id="tableVentas" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <td>...</td>
                <td>Código</td>
                <td>Nombre</td>
                <td>Persona</td>
                <td>Rango</td>
                <td>Porcentaje</td>
                <td>Fecha creación</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="modal fade" id="modalVentas" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Venta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frm_">
                    <input type="hidden" id="id_venta" name="id_venta" />
                    <input type="hidden" id="id_rango" name="id_rango" />
                    <input type="hidden" id="fecha_creacion" name="fecha_creacion" />
                    <div class="form-group">
                        <select class="form-control" id="id_persona" name="id_persona">
                            <option value="">--Seleccione una persona--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="id_seguro" name="id_seguro">
                            <option value="">--Seleccione un seguro--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="id_porcentaje" name="id_porcentaje">
                            <option value="">--Seleccione un porcentaje--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Edad</label>
                        <input type="text" class="form-control text-right" id="edad" name="edad" placeholder="Edad de la persona" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Valor base</label>
                        <input type="text" class="form-control text-right" id="valor_base" name="valor_base" placeholder="Valor base" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Valor del seguro</label>
                        <input type="text" class="form-control text-right" id="valor_seguro" name="valor_seguro" placeholder="Valor seguro">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Rango de edad</label>
                        <input type="text" class="form-control text-right" id="rango_seguro" name="rango_seguro" placeholder="Rangos" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Porcentaje</label>
                        <input type="text" class="form-control text-right" id="porcentaje" name="porcentaje" placeholder="Porcentaje" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Prima</label>
                        <input type="text" class="form-control text-right" id="prima" name="prima" placeholder="Prima" readonly>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnguardar">Guardar</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="js/functions_ventas.js"></script>